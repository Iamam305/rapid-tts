{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Rapid STT"
  },
  "components": {
    "schemas": {},
    "parameters": {}
  },
  "paths": {
    "/transcription": {
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prompt": {
                    "type": "string",
                    "maxLength": 128
                  },
                  "response_format": {
                    "type": "string",
                    "enum": ["json", "text", "verbose_json"]
                  },
                  "language": {
                    "type": "string"
                  },
                  "temperature": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                  },
                  "file": {
                    "type": "string",
                    "format": "uri"
                  },
                  "translate": {
                    "type": "boolean"
                  }
                },
                "required": ["response_format", "temperature", "file"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Retrieve the user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "output": {
                      "type": "object",
                      "properties": {}
                    }
                  },
                  "required": ["output"]
                }
              }
            }
          }
        }
      }
    }
  }
}
